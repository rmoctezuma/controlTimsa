<?php

include("../includes/generic.connection.php");

class Dia{
	var $anio;
	var $dia;

	var $contenido;

	function Dia(){

	}

	function getRequest(){
		$PDOmysql = getConsulta();

		$sql = 'SELECT idFlete 
				FROM Flete 
				ORDER BY idFlete 	
				WHERE
				DAYOFYEAR(Flete.Fecha) = :dia
				and
				YEAR(Flete.Fecha) = :anio';

		$stmt = $PDOmysql->prepare($sql);
		 $stmt->bindParam(':dia', $dia);
		 $stmt->bindParam(':anio', $anio);
		 $stmt->execute();
		 $rows = $stmt->fetchAll(PDO::FETCH_ASSOC);

		 formattedRequest($rows);

	}

	function formattedRequest(rows){
		foreach($rows as $fila) {
			echo $fila['idFlete'];
		}
	}
}

?>